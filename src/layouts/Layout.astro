---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { themes, DEFAULT_THEME } from "../utils/themes";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title ? `${title} | SandyDotDev` : "SandyDotDev";

// Serialize themes for inline script (prevents FOUC)
const themesJson = JSON.stringify(themes);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta property="og:image" content="/images/sandy-face-placeholder.webp" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Initial font loaded for better performance -->
    <link
      href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <script is:inline define:vars={{ themesJson, defaultTheme: DEFAULT_THEME }}>
      // Initialize theme immediately to prevent flash
      (function () {
        const themes = JSON.parse(themesJson);
        const savedTheme = localStorage.getItem("preferred-theme");
        if (savedTheme && themes.includes(savedTheme)) {
          document.documentElement.setAttribute("data-theme", savedTheme);
        } else {
          document.documentElement.setAttribute("data-theme", defaultTheme);
        }
      })();
    </script>
  </head>
  <body class="bg-base-100 text-base-content max-w-screen flex flex-col min-h-screen">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
